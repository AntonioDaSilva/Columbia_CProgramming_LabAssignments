#define GUESS_CHANCE 15

int check_element(char arr[], char x, int l){
  int checkBool = 0;
  for (int i = 0; i<l; i++){
    if (arr[i] == x){
      checkBool = 1;
      break;
    }
  }
  return checkBool;
}

#include <stdio.h>

int main(){
   int count_true = 0;
   int temp, temp2;
   int count_false = 0;
   char arr[7];
   char g[GUESS_CHANCE];
   for (int i = 0; i<7; i++){
     arr[i] = '*';
   }
   char word[7] = {'h','a','n','g','m','a','n'};

   printf("Let's play hangman! Start guessing!\n");
   for (int i = 0; i<GUESS_CHANCE; i++){
     temp2 = 0;
     printf("Guess number %d: ",i);
     scanf("%c",&g[i]);
     temp = count_true;
     for (int j = 0; j<7; j++){
       if (arr[j] == g[i]){
	 temp2 = 1;
       }
       if (g[i] == word[j] && arr[j] != g[i]){
	 arr[j] == g[i];
	 count_true += 1;
       }
      
     }
     if (temp2 == 1){
       printf("You entered the same character again.\n");
     }
     if (temp == count_true){
       count_false += 1;
     }
       if (count_true == 7){
	 printf("Congratulations! You won!\n");
	 return 0;
       }

     
            if (GUESS_CHANCE-i-1 != 0){
       printf("Up to know, you have guessed %d characters correct, and %d characters false. You still have %d chance.\n",count_true, count_false, GUESS_CHANCE-i-1  );
       }

}
     printf("Unfortunately you lost, computer won!.\n");
   return 0;
}
