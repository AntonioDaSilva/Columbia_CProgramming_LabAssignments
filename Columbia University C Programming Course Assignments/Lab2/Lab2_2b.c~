#include <stdio.h>

int main(){
  int a;
  printf("Enter the number: ");
  scanf("%d",&a);
  
  for(int i = 0; i<(a/2) ; i++){
    for(int j = 0; j<i; j++){
      printf(" ");
    }
    printf("*");
    for(int j = 0; j < (a/2)-(2*i)+1 ; j++){
      printf(" ");
    }
    printf("*\n");
  }
  if (a%2 != 0){
    for (int i = 0; i<(a/2) ; i++){
      printf(" ");
    }
    printf("*\n");
  }
  
  
}
