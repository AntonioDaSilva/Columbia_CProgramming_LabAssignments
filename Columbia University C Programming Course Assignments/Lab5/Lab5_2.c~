#include <stdio.h>
#include "string.h"

int factorial(int x){
  int a = 1;
  for ( int i = 1 ; i<=x; i++){
    a *= i;
  }
  return a;
}

void fact_str(int x){
  printf("%d! = ",x);
  for (int i = 1; i<x; i++){
    printf("%d x ",i);
  }
  printf("%d ",x);
  printf("= %d\n",factorial(x));
}

int main(){
  int x;
  printf("Please enter the number: ");
  scanf("%d",&x);
  fact_str(x);
  return 0;
}
